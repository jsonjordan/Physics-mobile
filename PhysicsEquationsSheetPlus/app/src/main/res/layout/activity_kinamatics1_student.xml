<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jason.physicsequationssheetplus.Kinamatics1ActivityStudent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtRules"
        android:id="@+id/txtRules"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/txtEquation"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Equation: v = v₀ + at"
        android:id="@+id/txtEquation"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="28sp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRules"
        android:layout_centerHorizontal="true"
        android:gravity="left"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v"
            android:id="@+id/radV"
            android:checked="false"
            android:textSize="30sp"
            android:layout_marginTop="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v₀"
            android:id="@+id/radV0"
            android:checked="false"
            android:textSize="30sp"
            android:layout_marginTop="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="a"
            android:id="@+id/radA"
            android:checked="false"
            android:textSize="30sp"
            android:layout_marginTop="20sp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="t"
            android:id="@+id/radT"
            android:checked="false"
            android:textSize="30sp"
            android:layout_marginTop="20sp" />
    </RadioGroup>

    <EditText
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/num1"
        android:layout_alignTop="@+id/radioGroup"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginTop="15sp"
        android:gravity="center_horizontal"
        android:textSize="23sp" />

    <EditText
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/num2"
        android:layout_below="@+id/num1"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:textSize="23sp" />

    <EditText
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/num3"
        android:layout_below="@+id/num2"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginTop="8sp"
        android:gravity="center_horizontal"
        android:textSize="23sp" />

    <EditText
        android:layout_width="80sp"
        android:layout_height="wrap_content"
        android:inputType="number|numberSigned|numberDecimal"
        android:ems="10"
        android:id="@+id/num4"
        android:layout_below="@+id/num3"
        android:layout_toRightOf="@+id/radioGroup"
        android:layout_toEndOf="@+id/radioGroup"
        android:layout_marginTop="8sp"
        android:gravity="center_horizontal"
        android:textSize="23sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m/s"
        android:id="@+id/units1"
        android:layout_above="@+id/num2"
        android:layout_toRightOf="@+id/num1"
        android:layout_toEndOf="@+id/num1"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m/s"
        android:id="@+id/units2"
        android:layout_alignBottom="@+id/num2"
        android:layout_alignLeft="@+id/units1"
        android:layout_alignStart="@+id/units1"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="m/s²"
        android:id="@+id/units3"
        android:layout_alignBottom="@+id/num3"
        android:layout_alignLeft="@+id/units2"
        android:layout_alignStart="@+id/units2"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="s"
        android:id="@+id/units4"
        android:layout_alignBottom="@+id/num4"
        android:layout_alignLeft="@+id/units3"
        android:layout_alignStart="@+id/units3"
        android:textSize="30sp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check"
        android:id="@+id/btnCheck"
        android:textSize="30sp"
        android:layout_above="@+id/txtAnswer"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#b867c4"
        android:layout_alignLeft="@+id/txtGuess" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/btnReset"
        android:textSize="30sp"
        android:backgroundTint="#e74f4f"
        android:layout_alignTop="@+id/btnCheck"
        android:layout_toEndOf="@+id/units2"
        android:layout_alignRight="@+id/txtGuess" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtAnswer"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="38sp"
        android:textAlignment="center"
        android:layout_alignLeft="@+id/radioGroup" />

    <EditText
        android:layout_width="260sp"
        android:layout_height="wrap_content"
        android:id="@+id/txtGuess"
        android:layout_above="@+id/btnCheck"
        android:layout_centerHorizontal="true"
        android:textSize="28sp"
        android:hint="Enter Answer"
        android:gravity="center_horizontal"
        android:inputType="number|numberSigned|numberDecimal" />

    <TextView
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:id="@+id/txtX"
        android:textSize="40sp"
        android:layout_above="@+id/btnCheck"
        android:layout_toRightOf="@+id/txtEquation"
        android:layout_toEndOf="@+id/txtEquation"
        android:text="✘"
        android:textColor="#f10a0a" />

    <TextView
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:id="@+id/txtCheck"
        android:textSize="40sp"
        android:text="✔"
        android:textColor="#41ec0d"
        android:layout_alignBottom="@+id/txtGuess"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="right" />

</RelativeLayout>
